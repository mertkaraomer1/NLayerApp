

@{
    ViewData["Title"] = "Index";
}
@model List<ProductWithCategoryDto>

<h1>Index</h1>
<table class="table table-striped">
    <thead>
        <tr>
            <td>Id</td>
             <td>Name</td>
              <td>Price</td>
              <td>Stock</td>
              <td>Category</td>
              <td>CreatedDate</td>
              <td>Action</td>
        </tr>
        
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Price</td>
            <td>@item.Stock</td>
            <td>@item.Category</td>
            <td>@item.CreatedDate</td>
            <td>
                <a class="btn btn-outline-warning" asp-controller="Products" asp-action="Update" asp-route-Id="@item.Id">Update</a>
                <a class="btn btn-outline-danger" asp-controller="Products" asp-action="Remove" asp-route-Id="@item.Id">Remove</a>
            </td>
            </tr>
        }
    </tbody>



</table>
